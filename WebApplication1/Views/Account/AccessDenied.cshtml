@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger mb-3">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-shield-lock-fill"></i> Access Denied</h4>
                </div>
                <div class="card-body text-center py-5">
                    <h1 class="display-1 text-danger fw-bold">403</h1>
                    <h3 class="card-title">You don't have permission to view this page.</h3>
                    <p class="card-text text-muted mb-4">
                        It looks like you are trying to access a restricted area (like the Admin panel).
                        If you believe this is a mistake, please contact your supervisor.
                    </p>

                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg px-4 gap-3">
                            <i class="bi bi-house-door"></i> Go Home
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-danger btn-lg px-4">
                            <i class="bi bi-box-arrow-in-right"></i> Switch Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>