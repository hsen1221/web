@model IEnumerable<DataAccess.Entities.LinePassenger>

@{
    ViewData["Title"] = "My Trips";
}

<div class="container mt-4">
    <h1><i class="bi bi-ticket-perforated"></i> My Bus Trips</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning mt-4">
            <h4><i class="bi bi-exclamation-triangle"></i> Not Registered</h4>
            <p>You are not currently registered to any bus line.</p>
            <div class="mt-3">
                <a asp-controller="Lines" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-search"></i> Browse Lines
                </a>
            </div>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover mt-3 shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Bus Line</th>
                    <th>Joined Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">
                            @(item.Line?.Title ?? "Unknown Line")
                        </td>
                        <td>
                            @item.RegisteredDate.ToShortDateString()
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>