@model IEnumerable<DataAccess.Entities.Line>

@{
    ViewData["Title"] = "Lines";
    // Retrieve the dictionary of driver names sent from the Controller
    var driverNames = ViewBag.DriverNames as Dictionary<string, string>;
}

<h1>Lines</h1>

@if (!Model.Any())
{
    <p>No lines found. Make sure you've applied migrations and seeded/imported data.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Driver</th>
                <th>Bus Capacity</th>
                <th>Stops</th>
                <th>Passengers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model)
            {
                <tr>
                    <td>@line.Title</td>
                    <td>
                        @if (driverNames != null && line.DriverId != null && driverNames.ContainsKey(line.DriverId.ToString()))
                        {
                            @driverNames[line.DriverId.ToString()]
                        }
                        else
                        {
                            <span class="text-muted">Unassigned</span>
                        }
                    </td>
                    <td>@(line.Bus?.Capacity ?? 0)</td>
                    <td>@(line.Stops?.Count ?? 0)</td>
                    <td>@(line.LinePassengers?.Count ?? 0)</td>
                </tr>
            }
        </tbody>
    </table>
}